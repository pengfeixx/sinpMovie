
dmr--MainWindow {
    background: transparent;
    /*
    border: 1px solid rgba(0, 0, 0, 10%);
    border-radius: 4px;
    */
    border: 1px solid rgba(0,0,0,0.10);
    box-shadow: 0 14px 30px 0 rgba(0,0,0,0.50);
    border-radius: 18px;
    border-radius: 18px;
}

dmr--Titlebar {
    background: transparent;
    qproperty-background: qlineargradient(x1:0 y1:0, x2:0 y2:1,
        stop:0 rgba(255,255,255,100%),  stop:1 rgba(248,248,248,100%)
    );
    qproperty-borderBottom: rgba(0,0,0,10%);
    qproperty-borderShadowTop: rgba(255,255,255,5%);
    /*border-radius: 4px;
     
     */
}

dmr--PlayerEngine, dmr--PlayerEngine * {
    background: transparent;
}

